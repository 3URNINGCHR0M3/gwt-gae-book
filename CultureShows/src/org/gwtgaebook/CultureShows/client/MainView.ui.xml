<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gdp="urn:import:com.google.gwt.user.datepicker.client"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default"
	>

	<ui:with type="org.gwtgaebook.CultureShows.client.NameTokens" field="nameTokens" />
	<ui:with field='res' type='org.gwtgaebook.CultureShows.client.resources.Resources' />


	<ui:style>

	.headerContainer {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 3em;
		font-size: 0.8em;
		background-color: #FF9C00;
		color: #EEDB00;
		/* green #7BB31A yellow #EEDB00  blue #8B88FF http://www.colorcombos.com/color-scheme-98.html */
	}

	.main {
		padding-top: 3em;
		margin: 0 auto;
		max-width: 50em;
	}

	.logo {
		float: left;
		padding: 0.5em;
	}

	.headerNav {
		float: right;
		margin: 0em;
		padding: 1em;
	}

	</ui:style>

	<g:HTMLPanel>
    	<g:HTMLPanel addStyleNames="{style.headerContainer}">
    		<g:HTMLPanel addStyleNames="{style.logo}">
    			<g:Image resource='{res.logo}'/>
    		</g:HTMLPanel>
    		<g:SimplePanel ui:field="headerNav" addStyleNames="{style.headerNav}">
    		</g:SimplePanel>
    	</g:HTMLPanel>

	    <g:SimplePanel ui:field="main" addStyleNames="{style.main}">
	    </g:SimplePanel>

	</g:HTMLPanel>

</ui:UiBinder>